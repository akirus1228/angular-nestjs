{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server",
            "runtimeArgs": [
                "-r",
                "ts-node",
                "-r",
                "tsconfig-paths/register"
            ],
            "args": [
                "${workspaceRoot}\\server\\src\\main.ts"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "server-watch",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "smartStep": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "generator",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
            ],
            "args": [
                "${workspaceFolder}/generator/index.ts"
            ]
        }
    ]
}