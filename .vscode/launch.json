{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "server",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "smartStep": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "generator",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
            ],
            "args": [
                "${workspaceFolder}/generator/index.ts"
            ]
        },
    ]
}