  "license": "ISC",
  "devDependencies": {
    "@types/node": "^10.12.24",
    "json-ts": "^1.6.4",
    "ts-morph": "^1.1.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-class-validator-rule": "^1.0.3",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "mongo-nest": "0.0.5",
    "nest-client-generator": "^0.1.2",
    "nosql-normalizer": "^1.0.6"
  }
