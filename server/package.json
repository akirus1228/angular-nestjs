{
    "name": "server",
    "version": "0.0.0",
    "description": "description",
    "author": "",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start-tador-client": "ts-node -r tsconfig-paths/register src/tador/client",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:prod": "node -r tsconfig-paths/register  ./dist/nest-angular/server/src/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nest-middlewares/compression": "^6.0.0",
        "@nestjs/common": "^6.0.0",
        "@nestjs/core": "^6.0.0",
        "@nestjs/platform-fastify": "^6.1.1",
        "@nestjs/platform-socket.io": "^6.1.1",
        "@nestjs/websockets": "^6.1.1",
        "@types/nodemailer": "^6.1.0",
        "bcrypt": "^3.0.4",
        "fastify-cookie": "^3.0.2",
        "fastify-cors": "^2.1.2",
        "fastify-static": "^2.4.0",
        "mongo-nest": "^0.2.2",
        "mongodb": "^3.1.13",
        "mongodb-backup": "^1.6.9",
        "mongodb-restore": "^1.6.2",
        "mssql": "^5.0.4",
        "node-cache": "^4.2.0",
        "nodemailer": "^6.1.1",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.3.3"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.0.0",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.13",
        "@types/mongodb": "^3.1.19",
        "@types/node": "^10.12.18",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.7",
        "jest": "^23.6.0",
        "nodemon": "^1.18.9",
        "prettier": "^1.17.1",
        "supertest": "^3.4.1",
        "ts-jest": "^23.10.5",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.7.0",
        "tslint": "5.12.1",
        "typescript": "^3.2.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
